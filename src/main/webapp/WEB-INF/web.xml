<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">

	<display-name>LibraryManagementSystem</display-name>
	<welcome-file-list>

		<welcome-file>login.jsp</welcome-file>

	</welcome-file-list>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.librarymanagement.clientserver.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BookReturn</servlet-name>
		<servlet-class>com.librarymanagement.clientserver.servlet.BookReturnServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookReturn</servlet-name>
		<url-pattern>/BookReturnServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AddBook</servlet-name>
		<servlet-class>com.librarymanagement.clientserver.servlet.AddingBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddBook</servlet-name>
		<url-pattern>/AddingBookServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BookRenewal</servlet-name>
		<servlet-class>com.librarymanagement.clientserver.servlet.BookRenewalServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookRenewal</servlet-name>
		<url-pattern>/BookRenewalServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BookSearch</servlet-name>
		<servlet-class>com.librarymanagement.clientserver.servlet.BookSearchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookSearch</servlet-name>
		<url-pattern>/BookSearchServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserBookSearch</servlet-name>
		<servlet-class>com.librarymanagement.clientserver.servlet.UserBookSearchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookSearch</servlet-name>
		<url-pattern>/UserBookSearchServlet</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>BookIssual</servlet-name>
		<servlet-class>com.librarymanagement.clientserver.servlet.BookIssualServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookIssual</servlet-name>
		<url-pattern>/BookIssualServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.librarymanagement.clientserver.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>


</web-app>